---
layout: layouts/base.njk
section: post
---

<article>
  <h1>{{ title }}</h1>
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time> by <a href="/authors/{{ author | slug }}/">{{ author }}</a>
    </small>
  </p>

  {{ layoutContent | safe }}

  {% if tags %}
    {% set taglist = tags %}
		{% include "components/taglist.njk" %}
  {% endif %}

</article>

<nav>
  <a href="{{ '/' | url }}">← Blog index</a>
</nav>
